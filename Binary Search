1.     ### Algorithm ###

#include <iostream>
#include<string>
#include<vector>

using namespace std ; 

int main(){
    vector<int> v = {2, 4, 6, 8, 10} ;
    int n = v.size() ;
    int target  = 8 ;
    bool found = false ;

    int l =0  , h = n-1 ;
    while(l<=h){
        int mid = l+(h-l)/2 ;
        if(v[mid] == target){
            cout << mid << endl;
            found = true;
            break;
        }
        else if( v[mid]<target){
            l = mid+1 ;
        }
        else{
            h = mid -1 ;
        }
        
    }
    if(!found){
            cout << "-1" << endl ;
        }


return 0 ;
}
